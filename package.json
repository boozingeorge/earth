{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist --ignore-scripts",
    "clean": "lerna clean --yes",
    "lint": "eslint ./packages --quiet --ext .js,.ts,.tsx --config ./.eslintrc.js",
    "prettier": "npx prettier --write '**/*.{js,jsx,ts,tsx}'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run prettier",
      "npm run lint --"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@boozingeorge/config": "file:packages/config",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  }
}
